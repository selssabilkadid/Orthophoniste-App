<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AddGoalController">
    <Label text="Enter the name of the goal:" />
    <TextField fx:id="goalNameField" promptText="Goal Name" />
    <Label text="Select the type of the goal:" />
    <ComboBox fx:id="typeComboBox" />
    <Label text="Select the score of the goal:" />
    <ComboBox fx:id="scoreComboBox" />
    <Button text="Add Goal" onAction="#addGoal" />
</VBox>
